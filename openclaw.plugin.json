      "wsPort": {
        "type": "number",
        "description": "WebSocket server port (default: 18790)"
      }
    }
  },
  "uiHints": {
    "usersFile": {
      "label": "Users Config File",
      "placeholder": "~/.openclaw/facility-users.yaml"
    }
  },
  "version": "0.1.0"
}
