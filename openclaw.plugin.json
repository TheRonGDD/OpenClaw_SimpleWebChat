{
  "id": "facility-web",
  "name": "Facility Web Chat",
  "description": "MAC/PIN authenticated web chat with per-user agent routing",
  "channels": ["facility-web"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "usersFile": {
        "type": "string",
        "description": "Path to users.yaml file"
